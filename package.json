{
  "name": "chlu-infrastructure",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "mocha --opts tests/mocha.opts",
    "start": "bash ./start.sh"
  },
  "dependencies": {
    "chlu-api-publish": "ChluNetwork/chlu-api-publish#semver:~0.2.0",
    "chlu-api-query": "ChluNetwork/chlu-api-query#semver:~0.2.0",
    "chlu-collector": "ChluNetwork/chlu-collector#semver:~0.2.0",
    "chlu-did-service": "ChluNetwork/chlu-did-service#semver:~0.1.0",
    "chlu-marketplace-js": "ChluNetwork/chlu-marketplace-js#semver:~0.2.0",
    "libp2p-websocket-star-rendezvous": "~0.2.3",
    "node-env-file": "^0.1.8"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chlu-api-client": "ChluNetwork/chlu-api-client-js#~0.2.0",
    "eslint": "^4.12.0",
    "lodash": "^4.17.10",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "no-console": 0,
      "no-debugger": 1,
      "no-var": 1,
      "no-trailing-spaces": 0,
      "eol-last": 0,
      "no-underscore-dangle": 0,
      "no-alert": 0,
      "no-lone-blocks": 0
    },
    "globals": {}
  }
}
